const fs = require('fs');
const OpenAI = require('openai');
const openai = new OpenAI({ apiKey: process.env.OPENAI_API_KEY });

async function runAIReview() {
  const screenshots = fs.readdirSync('./screenshots');
  const prompt = `
You are a QA AI agent.

Evaluate these screenshots for:
- Video/background display
- Each solution card button
- Form interaction
- CTA visibility
Score each issue 1-5 and summarize risks in plain English.

Screenshots: ${screenshots.join(', ')}
`;

  const response = await openai.chat.completions.create({
    model: "gpt-4.1-mini",
    messages: [{ role: "user", content: prompt }]
  });

  const output = response.choices[0].message.content;
  fs.writeFileSync('./reports/ai_summary.json', JSON.stringify(output, null, 2));
  console.log('AI Review Completed:\n', output);
}

runAIReview();
